{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md"
  ],
  "agent": {
    "plan": {
      "description": "Strategic planning and architecture analysis without code changes",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.2,
      "prompt": "{file:./PLANNING.md}",
      "tools": {
        "write": false,
        "edit": false
      },
      "permission": {
        "bash": "deny"
      }
    },
    "build": {
      "description": "Full development with all tools enabled for code implementation",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.3
    }
  }
}
