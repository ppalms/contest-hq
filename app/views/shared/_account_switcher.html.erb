<% if current_user&.sysadmin? %>
  <div class="relative">
    <%= form_with url: switch_account_path, method: :post, local: true, class: "account-switcher" do |f| %>
      <%= f.select :account_id,
               options_for_select(
                 [["All Accounts", ""]] +
                   Account.order(:name).map { |a| [a.name, a.id] },
                 Current.selected_account&.id || "",
               ),
               {},
               {
                 onchange: "this.form.submit()",
                 class:
                   "block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6",
               } %>
    <% end %>
  </div>
<% end %>

