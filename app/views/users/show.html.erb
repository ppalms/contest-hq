<%= render "shared/entity_detail",
      entity: @user,
      title: "#{@user.first_name} #{@user.last_name}",
      entity_partial: "users/user",
      actions: (capture do %>
        <%= link_to "Edit", edit_user_path(@user), class: "btn-secondary-sm" %>
      <% end) do %>

  <div class="pt-8">
    <div class="flex justify-between items-center">
      <h2>Schools</h2>
      <div class="flex items-center gap-2">
        <%= link_to "Add Schools", user_schools_path(@user), class: "btn-secondary-sm" %>
      </div>
    </div>

    <div class="pt-4">
      <% if @user.schools.any? %>
        <div class="space-y-2">
          <% @user.schools.order(:name).each do |school| %>
            <div class="flex items-center justify-between p-2 bg-gray-50 rounded border">
              <span class="text-sm"><%= school.name %></span>
              <%= button_to "Remove",
                    user_path(@user),
                    method: :patch,
                    params: { user: { remove_school_id: school.id } },
                    class: "btn-danger-sm text-xs",
                    form: { data: { turbo_confirm: "Remove #{school.name}?" } } %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No schools assigned. Click "Add Schools" to assign schools to this user.</p>
      <% end %>
    </div>
  </div>

<% end %>