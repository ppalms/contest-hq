<%= form_with url: users_path, method: :get, id: 'user_search_form' do |form| %>
  <div class="sm:flex sm:items-center">
    <%= form.text_field :search,
                    value: params[:search],
                    placeholder: "Search by name or email",
                    class: "text-field mb-2 sm:mb-0 sm:mr-2" %>
    <div class="flex gap-2">
      <%= form.submit "Search", class: "btn-primary-sm w-2/3 sm:w-auto" %>
      <%= link_to "Reset", users_path, class: "btn-secondary-sm text-center w-1/3 sm:w-auto" %>
    </div>
  </div>
<% end %>
