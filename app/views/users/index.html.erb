<div id="users">
  <% content_for :title, "Users" %>
  <div class="flex justify-between items-center">
    <h1>Users</h1>
    <div class="flex gap-2">
      <%= link_to "New user", sign_up_path, class: "btn-primary" %>
    </div>
  </div>

  <div class="pt-4">
    <%= render partial: "search" %>
  </div>

  <div id="user_list" class="pt-4">
    <% if @users.empty? %>
      <p class="text-center">No users found.</p>
    <% else %>
      <% @users.each do |user| %>
        <%= link_to edit_user_path(user.id) do %>
          <div
            class="
              flex gap-2 p-2 min-h-24 rounded hover:cursor-pointer hover:bg-cyan-50
              hover:outline hover:outline-1 hover:outline-cyan-100 hover:transition
              duration-300
            "
          >
            <div class="grow">
              <p class="text-xl font-bold"><%= user.email %></p>
              <p class="text-neutral-900"><%= user.roles.first.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
