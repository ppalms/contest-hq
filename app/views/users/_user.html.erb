<div id="<%= dom_id user %>">
  <div class="grid grid-cols-1 sm:grid-cols-4 gap-6 pt-6">
    <div class="sm:col-span-2">
      <strong class="block font-medium mb-1">Email address</strong>
      <%= user.email %>
    </div>

    <div class="sm:col-span-2">
      <strong class="block font-medium mb-1">Time zone</strong>
      <%= user.time_zone || "Not set" %>
    </div>

    <div class="sm:col-span-4">
      <strong class="block font-medium mb-1">Roles</strong>
      <div class="mt-2 flex flex-col space-y-2 border border-gray-400 bg-gray-50 shadow p-4 rounded-md">
        <% if user.roles.any? %>
          <% user.roles.order(:name).each do |role| %>
            <div class="flex items-center">
              <span>âœ“ <%= role.name %></span>
            </div>
          <% end %>
        <% else %>
          <span class="text-gray-500">No roles assigned</span>
        <% end %>
      </div>
    </div>
  </div>
</div>