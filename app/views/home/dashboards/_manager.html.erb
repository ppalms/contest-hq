<div class="card">
  <div class="card-header">
    <%= link_to "My Contests", contests_path %>
  </div>

  <div class="p-4 sm:p-6">
    <% if @managed_contests.empty? %>
      <div class="text-center pb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class="mx-auto size-12 text-gray-400"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"
          />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No contests</h3>
        <p class="mt-1 text-sm text-gray-500">You are not managing any contests</p>
      </div>
    <% else %>
      <div class="space-y-3">
        <% @managed_contests&.each do |contest| %>
          <div class="border border-gray-200 rounded-lg p-4 bg-white">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-lg">ðŸŽµ</span>
                  <h4 class="text-lg font-medium text-gray-900">
                    <%= contest.name %>
                  </h4>
                </div>
                <div class="space-y-1 text-sm text-gray-600">
                  <div class="flex items-center gap-2">
                    <span class="font-medium">Status:</span>
                    <span
                      class="
                        <%= case contest.setup_status
                                   when 'Needs Setup'
                                     'text-amber-700 bg-amber-50 border border-amber-200'
                                   when 'Ready to Schedule'
                                     'text-blue-700 bg-blue-50 border border-blue-200'
                                   when 'Scheduled'
                                     'text-green-700 bg-green-50 border border-green-200'
                                   end %> px-2 py-1 rounded-md text-xs font-medium
                      "
                    >
                      <%= contest.setup_status %>
                    </span>
                  </div>
                  <div>
                    <span class="font-medium">Dates:</span>
                    <%= if contest.contest_start && contest.contest_end
                      if contest.contest_start.to_date == contest.contest_end.to_date
                        contest.contest_start.strftime("%B %d, %Y")
                      else
                        "#{contest.contest_start.strftime("%B %d")}-#{contest.contest_end.strftime("%d, %Y")}"
                      end
                    else
                      "TBD"
                    end %>
                  </div>
                </div>
              </div>
              <div class="flex gap-2 ml-4">
                <% if contest.setup_status == "Needs Setup" %>
                  <%= link_to "Setup Contest", contest_setup_path(contest), class: "btn-primary-sm" %>
                <% elsif contest.schedules.any? %>
                  <%= link_to "View Schedule", contest.schedules.first, class: "btn-primary-sm" %>
                <% end %>
                <%= link_to "View Details", contest, class: "btn-secondary-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
