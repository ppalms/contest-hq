<div class="bg-white shadow-sm sm:rounded-lg border border-neutral-200">
  <div class="px-4 py-5 sm:p-6">
    <h2>Welcome</h2>
    <div class="mt-2 sm:flex sm:items-start sm:justify-between">
      <div class="max-w-xl text-sm text-gray-500">
        <p>Set up your roster to register for contests</p>
      </div>
      <div class="mt-5 sm:mt-0 sm:ml-6 sm:flex sm:shrink-0 sm:items-center">
        <%= link_to sanitize("Get Started &rarr;"),
        roster_path,
        class: "btn-primary-sm text-center" %>
      </div>
    </div>
  </div>
</div>

<div
  class="grid grid-cols-1 space-y-4 sm:grid-cols-2 sm:space-y-0 sm:space-x-4"
>
  <div
    class="
      divide-y divide-gray-200 overflow-hidden rounded-lg bg-white border
      border-neutral-200
    "
  >
    <div class="p-4 sm:px-6 bg-blue-100">
      <strong>My Entries</strong>
    </div>

    <div class="p-4 py-5 sm:p-6">
      <% @upcoming_contests&.each do |contest| %>
        <div>
          <%= link_to contest do %>
            <%= contest.name %>
            -
            <%= contest.contest_start&.strftime("%m-%d-%Y") || "TBD" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div
    class="
      divide-y divide-gray-200 overflow-hidden rounded-lg bg-white border
      border-neutral-200
    "
  >
    <div class="p-4 sm:px-6 bg-blue-100">
      <strong>My Scores</strong>
    </div>

    <div class="p-4 py-5 sm:p-6">
      <% @upcoming_contests&.each do |contest| %>
        <div>
          <%= link_to contest do %>
            <%= contest.name %>
            -
            <%= contest.contest_start&.strftime("%m-%d-%Y") || "TBD" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div
  class="
    divide-y divide-gray-200 overflow-hidden rounded-lg bg-white border
    border-neutral-200 mt-4
  "
>
  <div class="p-4 sm:px-6 bg-blue-100">
    <strong><%= link_to "Contests", contests_path %></strong>
  </div>

  <div class="p-4 sm:p-6">
    <% @upcoming_contests&.each do |contest| %>
      <div>
        <%= link_to contest do %>
          <%= contest.name %>
          -
          <%= contest.contest_start&.strftime("%m-%d-%Y") || "TBD" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
