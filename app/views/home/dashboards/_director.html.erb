<div
  class="grid grid-cols-1 space-y-4 sm:grid-cols-2 sm:space-y-0 sm:space-x-4"
>
  <div
    class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow"
  >
    <div class="px-4 py-5 sm:px-6 bg-blue-100">
      <strong>My Contests</strong>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <% @upcoming_contests.each do |contest| %>
        <%= link_to contest do %>
          <%= contest.name %>
          -
          <%= contest.contest_start.strftime("%m-%d-%Y") %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div
    class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow"
  >
    <div class="px-4 py-5 sm:px-6 bg-blue-100">
      <strong>Eligible Contests</strong>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <% @upcoming_contests.each do |contest| %>
        <%= link_to contest do %>
          <%= contest.name %>
          -
          <%= contest.contest_start.strftime("%m-%d-%Y") %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
