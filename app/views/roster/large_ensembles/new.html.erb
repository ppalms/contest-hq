<div class="wide-form-container" id="new_contest">
  <h1>New Large Ensemble</h1>

  <% if params[:redirect_to_contest_entry].present? %>
    <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-6">
      <p class="text-sm text-blue-800">
        You need to create a large ensemble before you can register for the
        contest. After creating your ensemble, you'll be redirected back to
        complete your contest registration.
      </p>
    </div>
  <% end %>

  <%= render "form",
  large_ensemble: @large_ensemble,
  performance_classes: @performance_classes,
  submit_text: "Create Large Ensemble" %>
</div>
