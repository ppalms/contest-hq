<div class="py-8" id="show_<%= dom_id @large_ensemble %>">
  <div class="flex flex-col sm:flex-row">
    <h1><%= @large_ensemble.name %></h1>

    <% if current_user.conducted_ensembles.exists?(id: @large_ensemble.id) %>
      <div class="action-button-container">
        <%= link_to "Edit",
        edit_roster_large_ensemble_path(@large_ensemble),
        class: "btn-secondary-sm sm:btn-secondary" %>

        <%= button_to "Delete",
        roster_large_ensemble_path(@large_ensemble),
        method: :delete,
        class: "btn-danger-sm sm:btn-danger",
        form: {
          data: {
            turbo_confirm: "Are you sure?",
          },
        } %>
      </div>
    <% end %>
  </div>

  <%= render @large_ensemble %>

  <%= render "contests" %>
</div>
