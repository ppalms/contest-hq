<div class="py-8" id="show_<%= dom_id @large_group %>">
  <%= render @large_group %>

  <% if current_user.director? || current_user.admin? %>
    <div class="form-button-container">
      <%= link_to "Edit",
      edit_roster_large_group_path(@large_group),
      class: "btn-secondary" %>

      <%= button_to "Delete",
      roster_large_group_path(@large_group),
      method: :delete,
      class: "btn-danger",
      form: {
        data: {
          turbo_confirm: "Are you sure?",
        },
      } %>
    </div>
  <% end %>
</div>
