<% if @large_groups.empty? %>
  <div class="text-center p-8">
    <svg
      class="mx-auto size-12 text-gray-400"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
    >
      <path
        vector-effect="non-scaling-stroke"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"
      />
    </svg>
    <h3 class="mt-2 text-sm font-semibold text-gray-900"><%= empty_text %></h3>
    <p class="mt-1 text-sm text-gray-500"><%= empty_hint %></p>
    <div class="mt-6">
      <%= button_to create_text, create_path, method: :get, class: "btn-primary" %>
    </div>
  </div>
<% else %>
  <ul role="list" class="divide-y divide-gray-100">
    <% @large_groups.each do |large_group| %>
      <li class="flex items-center justify-between gap-x-6 py-5">
        <div class="min-w-0">
          <div class="flex items-start gap-x-3">
            <p class="font-semibold text-gray-900"><%= large_group.name %></p>
          </div>
          <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
            <p class="truncate"><%= large_group.organization.name %></p>
            <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
              <circle cx="1" cy="1" r="1"/>
            </svg>
            <%= large_group.large_group_class&.name %>
          </div>
        </div>

        <div class="flex flex-none items-center gap-x-4">
          <%= link_to "View", roster_large_group_path(large_group), class: "btn-primary-sm" %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
