<% content_for :title, "Showing account" %>
<%= render "shared/entity_detail",
      entity: @account,
      title: @account.name,
      entity_partial: "accounts/account",
      actions: (capture do %>
        <%= link_to "Edit", edit_account_path(@account), class: "btn-primary-sm" %>
      <% end) do %>

  <div class="flex flex-col pt-4">
    <strong class="block font-medium mb-1">Users</strong>

    <% @account.users.each do |user| %>
      <div class="flex items-center mb-1">
        <%= user.first_name %>
        <%= user.last_name %>
      </div>
    <% end %>
  </div>
<% end %>
