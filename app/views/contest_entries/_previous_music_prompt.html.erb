<div id="previous_music_prompt" class="p-6 bg-blue-50 border-2 border-blue-300 rounded-lg mb-4">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    <div class="ml-3 flex-1">
      <h3 class="text-lg font-medium text-blue-900">Use music from previous entry?</h3>
      <div class="mt-2 text-sm text-blue-800">
        <p class="mb-2">Your entry for <strong><%= @previous_entry.contest.name %></strong> used:</p>
        <ol class="list-decimal list-inside space-y-1 ml-2">
          <% @previous_entry.music_selections.each do |music| %>
            <li>
              "<%= music.title %>" by <%= music.composer %>
              <% if music.prescribed? %>
                <span class="text-xs text-blue-600">(Prescribed)</span>
              <% end %>
            </li>
          <% end %>
        </ol>
      </div>
      <div class="mt-4 flex gap-3">
        <%= button_to "Use These Pieces",
          contest_entry_copy_music_path(contest_id: @contest_entry.contest.id, entry_id: @contest_entry.id),
          method: :post,
          class: "btn-primary" %>
        <%= button_to "Start Fresh",
          contest_entry_path(@contest_entry.contest, @contest_entry),
          method: :get,
          class: "btn-secondary",
          form: {
            data: {
              turbo_method: :get
            }
          } %>
      </div>
    </div>
  </div>
</div>
