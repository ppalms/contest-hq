<%= render "shared/entity_detail",
      entity: @contest_entry,
      title: @contest_entry.large_ensemble.name,
      entity_partial: "contest_entries/contest_entry",
      actions: (capture do %>
        <% if @contest_entry.user == current_user %>
          <%= link_to "Edit",
          edit_contest_entry_path(@contest_entry.contest, @contest_entry),
          class: "btn-primary-sm" %>
          <%= button_to "Delete",
          contest_entry_path(@contest_entry.contest, @contest_entry),
          method: :delete,
          class: "btn-danger-sm",
          form: {
            data: {
              turbo_confirm: "Are you sure?",
            },
          } %>
        <% end %>
      <% end) do %>
<% end %>
