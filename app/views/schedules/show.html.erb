<% content_for :title, "Schedule" %>
<div class="py-8 space-y-4">
  <div class="flex justify-between">
    <h1><%= @schedule.contest.name %>
      Schedule</h1>
  </div>

  <%= turbo_frame_tag "contest_setup_content" do %>
    <%= turbo_frame_tag "schedule_action_content" do %>
      <% if current_user.manager? %>
        <%= render partial: "schedules/action_buttons", locals: { schedule: @schedule } %>
      <% end %>
    <% end %>

    <div class="pt-4">
      <ol class="list-decimal text-sm pl-4">
        <% @schedule.contest.performance_phases&.each do |step| %>
          <li>
            <div class="flex justify-between border-b">
              <div>
                <%= step.name %>
                -
                <%= step.duration %>
                min.
              </div>
              <div>
                <%= step.room.name %>
                -
                <%= step.room.room_number %>
              </div>
            </div>
          </li>
        <% end %>
      </ol>
    </div>

    <% if @schedule.days.any? && @schedule.days.first.schedule_blocks.any? %>
      <div class="pt-4 border-t">
        <h3 class="text-sm font-medium text-gray-900 mb-2">Time Preference Legend</h3>
        <div class="flex flex-wrap gap-4 text-xs">
          <div class="flex items-center">
            <div class="w-4 h-4 bg-green-100 border border-green-300 rounded mr-2"></div>
            <span>Scheduled within preferred time</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-yellow-100 border border-yellow-300 rounded mr-2"></div>
            <span>Has preference but scheduled outside it</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-gray-100 border border-gray-300 rounded mr-2"></div>
            <span>No time preference specified</span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag "schedule_day_content" do %>
  <%= render partial: "schedules/days/schedule_blocks",
  locals: {
    schedule: @schedule,
    selected_day: @selected_day,
  } %>
<% end %>
