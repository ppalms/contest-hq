<% content_for :title, "Schedule" %>
<div class="py-8 space-y-4">
  <div class="flex justify-between">
    <h1><%= @contest.name %>
      Schedule</h1>
  </div>

  <div>
    <div class="flex justify-between border-b">
      <h3 class="text-xl font-bold">Phases</h3>

      <%= link_to "Edit Setup",
      contest_setup_path,
      class: "text-gray-800 text-sm font-semibold hover:underline" %>
    </div>

    <ol class="list-decimal text-sm">
      <% @schedule.performance_phase.performance_steps&.each do |step| %>
        <li>
          <div class="flex justify-between border-b">
            <div>
              <%= step.name %>
              -
              <%= step.duration %>
              min.
            </div>
            <div>
              <%= step.room.name %>
              -
              <%= step.room.room_number %>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
</div>
