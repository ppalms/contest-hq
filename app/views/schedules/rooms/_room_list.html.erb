<%= turbo_frame_tag "schedule_room_content" do %>
  <div>
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto -mt-1">
        <h2>Rooms</h2>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to "Add Room",
        new_contest_schedule_room_path(@contest, @schedule),
        class: "btn btn-primary-sm",
        data: {
          turbo_frame: "schedule_room_content",
        } %>
      </div>
    </div>
    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black/5 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300 table-auto">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    scope="col"
                    class="
                      py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6
                    "
                  >Name</th>
                  <th
                    scope="col"
                    class="
                      px-3 py-3.5 text-left text-sm font-semibold text-gray-900
                    "
                  >Number</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @schedule.rooms.order(:name).each do |room| %>
                  <tr>
                    <td
                      class="
                        whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6
                      "
                    ><%= room.name %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= room.room_number %></td>
                    <td class="flex justify-end space-x-2 p-2">
                      <%= link_to "Edit",
                      edit_contest_schedule_room_path(@contest, @schedule, room),
                      data: {
                        turbo_frame: "schedule_room_content",
                      },
                      class: "btn-primary-sm" %>
                      <%= button_to "Delete",
                      contest_schedule_room_path(@contest, @schedule, room),
                      method: :delete,
                      class: "btn-danger-sm",
                      form: {
                        data: {
                          turbo_confirm: "Are you sure?",
                        },
                      } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
