<div class="simple-form-container">
  <%= render "layouts/alert_message", alert: alert %>

  <h1>Forgot your password?</h1>

  <%= form_with(url: identity_password_reset_path, class: "simple-form") do |form| %>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.email_field :email, required: true, autofocus: true, class: "text-field" %>
    </div>

    <div>
      <%= form.submit "Send password reset email", class: "btn-primary" %>
    </div>
  <% end %>
</div>
