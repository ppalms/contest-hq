<!-- Hero Section -->
<section class="text-center py-16 -mt-6">
  <h1 class="mb-6">Simple Contest Management for State Music Organizations</h1>
  <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
    Basic tools to help organize your band and orchestra contests. An
    alternative to managing everything in spreadsheets.
  </p>
  <%= link_to "Request Beta Access",
  "#beta-signup",
  class: "btn-primary text-lg px-8 py-4",
  data: {
    turbo_scroll: :smooth,
  } %>
</section>

<!-- Features Section -->
<section class="py-16">
  <h2 class="text-center mb-12">Tools We're Building</h2>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- Contest Information -->
    <div class="card">
      <div class="card-header">
        Contest Scheduling
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">
          Keep basic contest details organized and manage contest schedules.
        </p>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            Contest dates and deadlines
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            Contest entry tracking
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            Automated scheduling
          </li>
        </ul>
      </div>
    </div>

    <!-- School & Director Data -->
    <div class="card">
      <div class="card-header">
        Organization Tools
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">
          Manage your organization's schools, directors, and contest
          configuration.
        </p>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            School information
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            User management
          </li>
          <li class="flex items-center">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
            Group classifications
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="py-16 bg-white rounded-lg border border-neutral-300 my-8">
  <div class="px-8">
    <h2 class="text-center mb-12">Why We're Building This</h2>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="text-center">
        <div
          class="
            w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4
          "
        >
          <svg
            class="w-8 h-8 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-3">Organize Contest Data</h3>
        <p class="text-gray-600">Keep track of schools, directors, entries, and schedules in one place
          instead of spreadsheets.</p>
      </div>

      <div class="text-center">
        <div
          class="
            w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4
          "
        >
          <svg
            class="w-8 h-8 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-3">Manage Scheduling</h3>
        <p class="text-gray-600">Generate and update contest schedules with room assignments and\
          multi-part performances.</p>
      </div>

      <div class="text-center">
        <div
          class="
            w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4
          "
        >
          <svg
            class="w-8 h-8 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-3">Director Self-Service</h3>
        <p class="text-gray-600">Directors can register entries and update information themselves
          instead of email back-and-forth.</p>
      </div>
    </div>
  </div>
</section>

<!-- Beta Signup Section -->
<section id="beta-signup" class="py-16">
    <div class="card">
      <div class="card-header">
        Request Beta Access
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">
          Contest HQ is in early development. We're looking for state music
          organizations to help test and improve the system.
        </p>

        <%= form_with url: "/beta_signup", local: true, class: "space-y-4" do |form| %>
          <div>
            <%= form.label :organization,
                       "Organization Name",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :organization, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :name,
                       "Your Name",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :email,
                       "Email Address",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :contests,
                       "Types of contests you manage",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :contests,
                           rows: 3,
                           placeholder:
                             "e.g., State Orchestra, Regional Marching Band, State Concert Band...",
                           class: "text-field" %>
          </div>

          <%= form.submit "Request Beta Access", class: "btn-primary w-full" %>
        <% end %>

        <div class="pt-4 text-center text-sm text-gray-500">
          Questions? Email us at
          <%= mail_to "hello@contesthq.app",
          "hello@contesthq.app",
          class: "text-blue-600 hover:underline" %>
        </div>
      </div>
    </div>
</section>
