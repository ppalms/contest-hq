<!-- Hero Section -->
<section class="text-center py-12 -mt-6">
  <h1 class="mb-4">Contest Management for State Music Organizations</h1>
  <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
    Organize contests, manage entries, and coordinate schedules without spreadsheets.
  </p>
  <%= link_to "Request Beta Access",
  "#beta-signup",
  class: "btn-primary text-lg px-8 py-4",
  data: {
    turbo_scroll: :smooth,
  } %>
</section>

<!-- Features Section -->
<section class="py-12">
  <h2 class="text-center mb-8">Current Features</h2>
  
  <div class="card max-w-3xl mx-auto">
    <div class="p-6 sm:p-8">
      <ul class="space-y-3 text-gray-700">
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>Multi-contest management</strong> - Organize multiple contests per season with separate configurations</span>
        </li>
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>School and ensemble rosters</strong> - Maintain school information and ensemble registrations</span>
        </li>
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>Performance scheduling</strong> - Assign performance times and room locations</span>
        </li>
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>Prescribed music library</strong> - Manage required repertoire and music selections</span>
        </li>
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>Role-based access control</strong> - Separate permissions for admins, directors, managers, and judges</span>
        </li>
        <li class="flex items-start">
          <span class="w-2 h-2 bg-blue-600 rounded-full mr-3 mt-2 flex-shrink-0"></span>
          <span><strong>Multi-tenant architecture</strong> - Secure, isolated environments for each state organization</span>
        </li>
      </ul>
    </div>
  </div>
</section>

<!-- Beta Signup Section -->
<section id="beta-signup" class="py-16">
    <div class="card">
      <div class="card-header">
        Request Beta Access
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">
          Contest HQ is in early development. We're looking for state music
          organizations to help test and improve the system.
        </p>

        <%= form_with url: "/beta_signup", local: true, class: "space-y-4" do |form| %>
          <div>
            <%= form.label :organization,
                       "Organization Name",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :organization, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :name,
                       "Your Name",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :email,
                       "Email Address",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, required: true, class: "text-field" %>
          </div>

          <div>
            <%= form.label :contests,
                       "Types of contests you manage",
                       class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :contests,
                           rows: 3,
                           placeholder:
                             "e.g., State Orchestra, Regional Marching Band, State Concert Band...",
                           class: "text-field" %>
          </div>

          <%= form.submit "Request Beta Access", class: "btn-primary w-full" %>
        <% end %>

        <div class="pt-4 text-center text-sm text-gray-500">
          Questions? Email us at
          <%= mail_to "hello@contesthq.app",
          "hello@contesthq.app",
          class: "text-blue-600 hover:underline" %>
        </div>
      </div>
    </div>
</section>
