<div id="show_<%= dom_id @contest %>">
  <div class="py-2">
    <%= link_to sanitize("&larr; Back"), contests_path %>
  </div>
  
  <%= render @contest %>
  
  <div class="mt-6 flex justify-center space-x-2">
    <%= link_to "Edit", edit_contest_path(@contest), class: "btn-secondary" %>
    <%= button_to "Delete", @contest, method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
</div>
