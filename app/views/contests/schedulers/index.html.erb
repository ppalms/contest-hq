<div class="py-8">
  <div class="flex flex-col sm:flex-row">
    <h1>Schedulers for <%= @contest.name %></h1>
    
    <% if current_user.tenant_admin? %>
      <div class="action-button-container">
        <%= link_to "Add Scheduler", new_contest_scheduler_path(@contest), class: "btn-secondary-sm" %>
      </div>
    <% end %>
  </div>

  <div class="pt-8">
    <h2>Associated Schedulers</h2>
    
    <% if @contest_schedulers.any? %>
      <div class="pt-6">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @contest_schedulers.each do |contest_scheduler| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= contest_scheduler.user.first_name %> <%= contest_scheduler.user.last_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= contest_scheduler.user.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <% if current_user.tenant_admin? %>
                      <%= button_to "Remove", 
                          contest_scheduler_path(@contest, contest_scheduler), 
                          method: :delete,
                          class: "btn-danger-sm",
                          form: {
                            data: {
                              turbo_confirm: "Are you sure you want to remove this scheduler from the contest?",
                            },
                          } %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="pt-6">
        <p class="text-gray-500">No schedulers are currently associated with this contest.</p>
      </div>
    <% end %>
  </div>
</div>