<%= turbo_frame_tag "contest_phase_content" do %>
  <div class="flow-root">
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <table class="min-w-full divide-y divide-gray-300 table-auto">
          <thead>
            <tr>
              <th
                scope="col"
                class="
                  py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6
                "
              >
                Order
              </th>
              <th
                scope="col"
                class="
                  py-3.5 pr-3 text-left text-sm font-semibold text-gray-900
                "
              >Name</th>
              <th
                scope="col"
                class="
                  px-3 py-3.5 text-left text-sm font-semibold text-gray-900
                "
              >Room</th>
              <th
                scope="col"
                class="
                  px-3 py-3.5 text-left text-sm font-semibold text-gray-900
                "
              >Duration</th>
              <th scope="col" class="flex justify-end p-2">
                <%= link_to "Edit",
                contest_phase_bulk_edit_path(@contest),
                class: "btn btn-primary-sm",
                data: {
                  turbo_frame: "contest_phase_content",
                } %>

              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @contest.performance_phases.each do |phase| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-500 sm:pl-6"><%= phase.ordinal %></td>
                <td class="whitespace-nowrap py-4 pr-3 text-sm font-medium text-gray-900 "><%= phase.name || "N/A" %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= phase.room.name %>
                  -
                  <%= phase.room.room_number %></td>
                <td class="w-16 whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-center">
                  <%= phase.duration %>
                  minutes
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
