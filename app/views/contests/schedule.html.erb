<%= turbo_frame_tag "contest_setup_content" do %>
  <div>
    <ol class="list-decimal text-sm pl-4">
      <% @schedule.contest.performance_phases&.each do |step| %>
        <li>
          <div class="flex justify-between border-b">
            <div>
              <%= step.name %>
              -
              <%= step.duration %>
              min.
            </div>
            <div>
              <%= step.room.name %>
              -
              <%= step.room.room_number %>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
<% end %>
