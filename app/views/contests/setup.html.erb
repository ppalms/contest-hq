<%= turbo_frame_tag "contest_setup_content" do %>
  <div data-controller="contest-setup">
    <div class="flex justify-between">
      <h2>Schedule Setup</h2>

      <%= link_to "Done",
      contest_performance_phases_path,
      class: "btn-secondary-sm",
      data: {
        turbo_frame: "contest_setup_content",
      } %>
    </div>

    <%= turbo_frame_tag "contest_room_content" do %>
      <div class="pt-8">
        <%= render partial: "contests/rooms/room_list", locals: { rooms: @contest.rooms } %>
      </div>
    <% end %>

    <%= turbo_frame_tag "contest_phase_content" do %>
      <div class="py-8">
        <%= render partial: "contests/performance_phases/summary",
        locals: {
          contest: @contest,
        } %>
      </div>
    <% end %>
  </div>
<% end %>
