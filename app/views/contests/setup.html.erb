<% content_for :title, "Schedule" %>
<div class="py-8 space-y-4">
  <div class="flex justify-between">
    <h1><%= @schedule.contest.name %>
      Schedule Setup</h1>
  </div>

  <div id="tab_container" data-controller="contest-setup">
    <div class="tabs">
      <button
        class="tab-button active"
        data-contest-setup-target="tab"
        data-action="click->contest-setup#selectTab"
        data-target="contest_room_tab"
      >Rooms</button>
      <button
        class="tab-button"
        data-contest-setup-target="tab"
        data-action="click->contest-setup#selectTab"
        data-target="contest_phase_tab"
      >Phases</button>
    </div>

    <div class="relative">
      <%= link_to "Done",
      schedule_path(@contest.schedules.first),
      class: "btn-secondary-sm absolute bottom-2 right-0" %>
    </div>

    <div class="tab-content bg-white -mt-px">
      <div
        id="contest_room_tab"
        class="tab-pane active"
        data-contest-setup-target="pane"
      >
        <%= turbo_frame_tag "contest_room_content" do %>
          <div>
            <%= render partial: "contests/rooms/room_list", locals: { rooms: @contest.rooms } %>
          </div>
        <% end %>
      </div>

      <div
        id="contest_phase_tab"
        class="tab-pane hidden"
        data-contest-setup-target="pane"
      >
        <%= turbo_frame_tag "contest_phase_content" do %>
          <div>
            <%= render partial: "contests/performance_phases/phase_list" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
