<% content_for :title, "Select Prescribed Music" %>

<div class="pt-8 max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Select Prescribed Music</h1>
      <p class="text-gray-600 mt-1">
        Showing approved pieces for <%= @contest_entry.large_ensemble.school.school_class.name %> - <%= @contest_entry.contest.season.name %>
      </p>
    </div>
  </div>

  <%= form_with url: new_prescribed_contest_entry_music_selections_path(contest_id: @contest_entry.contest_id, entry_id: @contest_entry.id, replace: params[:replace]), method: :get, class: "mb-6" do |f| %>
    <div class="flex gap-3">
      <%= text_field_tag :search, params[:search], class: "text-field flex-1", placeholder: "Search by title or composer..." %>
      <%= hidden_field_tag :replace, params[:replace] if params[:replace].present? %>
      <%= f.submit "Search", class: "btn-primary" %>
    </div>
  <% end %>

  <% if @prescribed_music.any? %>
    <div class="bg-white rounded-lg border overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Composer</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Action</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @prescribed_music.each do |music| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap"><%= music.title %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= music.composer %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <% if params[:replace].present? %>
                  <%= button_to "Select", contest_entry_music_selection_path(contest_id: @contest_entry.contest_id, entry_id: @contest_entry.id, id: params[:replace]), method: :patch, params: { music_selection: { prescribed_music_id: music.id } }, class: "btn-primary-sm" %>
                <% else %>
                  <%= button_to "Select", contest_entry_music_selections_path(contest_id: @contest_entry.contest_id, entry_id: @contest_entry.id), method: :post, params: { music_selection: { prescribed_music_id: music.id } }, class: "btn-primary-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% elsif params.key?(:search) %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <p class="text-gray-600">No prescribed music found matching your search.</p>
    </div>
  <% else %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <p class="text-gray-600 mb-4">Enter a search term to find prescribed music.</p>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "Cancel", contest_entry_path(@contest_entry.contest, @contest_entry), class: "btn-secondary" %>
  </div>
</div>
