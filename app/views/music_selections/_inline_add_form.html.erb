<div class="bg-blue-50 p-4 rounded-lg border-2 border-blue-300"
     data-music-bulk-edit-target="item"
     data-new-item="true">

  <%= hidden_field_tag "music_selections[][position]", slot[:position] %>

  <% if slot[:type] == :prescribed %>
    <div class="mb-3">
      <span class="inline-block px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded">
        Prescribed
      </span>
      <span class="inline-block ml-2 px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded">
        New
      </span>
    </div>

    <p class="text-sm text-gray-600 mb-3">Select from prescribed music list</p>

    <div class="flex gap-2">
      <%= link_to "Select Prescribed Music",
                  select_prescribed_contest_entry_selections_path(entry_id: @contest_entry.id),
                  class: "btn-primary-sm",
                  data: { turbo_frame: "music_slot_prescribed" } %>
      <button type="button"
              data-action="music-bulk-edit#cancelAdd"
              class="btn-secondary-sm">
        Cancel
      </button>
    </div>
  <% else %>
    <div class="mb-3">
      <span class="inline-block px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded">
        New
      </span>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-3">
      <div>
        <%= label_tag "music_selections[][title]", "Title",
                      class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "music_selections[][title]", nil,
                          class: "text-field w-full",
                          required: true %>
      </div>
      <div>
        <%= label_tag "music_selections[][composer]", "Composer",
                      class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "music_selections[][composer]", nil,
                          class: "text-field w-full",
                          required: true %>
      </div>
    </div>

    <div class="flex gap-2">
      <button type="button"
              data-action="music-bulk-edit#confirmAdd"
              class="btn-primary-sm">
        Add to List
      </button>
      <button type="button"
              data-action="music-bulk-edit#cancelAdd"
              class="btn-secondary-sm">
        Cancel
      </button>
    </div>
  <% end %>
</div>
