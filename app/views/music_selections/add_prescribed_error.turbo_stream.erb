<%= turbo_stream.replace "music_slot_prescribed" do %>
  <div class="mb-4 rounded-lg border-2 border-red-300 bg-red-50"
       data-slot
       data-slot-type="prescribed"
       data-slot-position="<%= @position || 1 %>">
    
    <div class="p-6">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-medium text-red-800 mb-1">Invalid Prescribed Music</h3>
          <p class="text-sm text-red-700"><%= @error_message %></p>
        </div>
      </div>
      
      <div class="mt-4">
        <%= link_to "Try Again",
                    select_prescribed_contest_entry_selections_path(
                      entry_id: @contest_entry.id,
                      position: @position || 1
                    ),
                    class: "btn-primary-sm",
                    data: { turbo_frame: "music_slot_prescribed" } %>
      </div>
    </div>
  </div>
<% end %>
