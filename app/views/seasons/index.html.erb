<% content_for :title, "Seasons" %>
<div class="py-8 space-y-4" id="seasons">
  <div class="flex justify-between">
    <h1>Contest Seasons</h1>
    <%= link_to "New Season", new_season_path, class: "btn-primary" %>
  </div>

  <div
    class="rounded-md bg-white border border-neutral-200 shadow-2xs"
  >
    <% if @seasons.empty? %>
      <p class="text-center p-8">No seasons found.</p>
    <% else %>
      <div class="divide-y divide-neutral-200">
        <% @seasons.each do |season| %>
          <div class="flex items-center justify-between p-4">
            <div>
              <h3 class="text-lg font-medium">
                <%= season.name %>
                <% if season.archived? %>
                  <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                    Archived
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                    Active
                  </span>
                <% end %>
              </h3>
              <p class="text-sm text-gray-500">
                <%= pluralize(season.contests.count, 'contest') %>
              </p>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Edit", edit_season_path(season), class: "btn-secondary" %>
              <% if season.contests.empty? %>
                <%= link_to "Delete", season_path(season), method: :delete, 
                    class: "btn-secondary text-red-600", 
                    confirm: "Are you sure you want to delete this season?" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>