<% content_for :title, "Organizations" %>
<div id="organizations">
  <div class="flex justify-between items-center">
    <h1>Organizations</h1>

    <% if current_user.admin? %>
      <div>
        <%= button_to "New Organization",
        new_organization_path,
        method: :get,
        class: "btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="p-4">
    <%= render partial: "search" %>
  </div>

  <div
    id="organization_list"
    class="px-4 rounded-md bg-white border border-neutral-200 shadow-sm"
  >
    <%= render partial: "table" %>
  </div>
</div>
