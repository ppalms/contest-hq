<%= form_with url: organizations_schools_path, method: :get, id: "school_search_form" do |form| %>
  <div class="sm:flex sm:items-center">
    <%= form.text_field :name, value: params[:name], placeholder: "Search by school name", class: "text-field mb-2 sm:mb-0 sm:mr-2" %>
    <div class="flex gap-2">
      <%= form.submit "Search", class: "btn-primary w-2/3 sm:w-auto" %>
      <%= link_to "Reset", organizations_schools_path, class: "btn-secondary text-center w-1/3 sm:w-auto" %>
    </div>
  </div>
<% end %>
