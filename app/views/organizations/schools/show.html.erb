<%= render "shared/entity_detail",
      entity: @school,
      title: @school.name,
      entity_partial: "organizations/schools/school",
      actions: (capture do %>
        <% if current_user.account_admin? %>
          <%= link_to "Edit", edit_organizations_school_path(@school), class: "btn-primary-sm" %>
          <%= button_to "Delete",
          organizations_school_path(@school),
          method: :delete,
          class: "btn-danger-sm",
          form: {
            data: {
              turbo_confirm: "Are you sure?",
            },
          } %>
        <% end %>
      <% end) do %>
<% end %>
